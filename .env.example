# Google Places API
# Obter em: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_api_key_here

# Database
# Para SQLite local (development):
DATABASE_URL=sqlite:///data/leads.db

# Para PostgreSQL/Neon (production):
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Server Port (Railway define automaticamente em producao)
# PORT=6789

# Defaults
DEFAULT_RADIUS=5000
DEFAULT_LANGUAGE=pt
MAX_RESULTS_PER_PAGE=20

# Rate Limiting
REQUESTS_PER_SECOND=5.0
MAX_RETRIES=3

# Export
EXPORT_DIR=./exports

# Data Retention (Google ToS: max 30 dias)
DATA_REFRESH_DAYS=30

# Logging
LOG_LEVEL=INFO
